            params.cluster_sets ? "--bf CLUSTER" : "--bf BARCODE",
            ].join(" ").trim()
        ext.args2 = ["--maxerror ${params.buildconsensus_maxerror} --maxgap ${params.buildconsensus_maxgap}",
